{% comment %}SV-6-Dec-21{% endcomment %}
<script>
  (function() {
    var subheader_fr = "{{ collection.metafields.custom_fields.banner_subheading_fr }}" || "";
    var subheader_en = "{{ collection.metafields.custom_fields.banner_subheading_en }}" || "";
    
    if (!document.querySelector('.banner__subheading.subtitle')) {
      document.querySelector('.banner__heading.title').insertAdjacentHTML('afterEnd', '<p class="banner__subheading subtitle"></p>');
    }

    var isFrenchSite = window.location.pathname.indexOf('/fr/') !== -1;
    if (isFrenchSite) {
      document.querySelector('.banner__subheading.subtitle').innerText = subheader_fr;
    }
    else {
      document.querySelector('.banner__subheading.subtitle').innerText = subheader_en;
    }
  })();
</script>

