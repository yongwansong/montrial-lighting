{% capture hreflang_en %}{{ canonical_url | replace: '/fr', '' }}{% endcapture %}
{% if template contains 'blog' and request.path contains 'blogue-francais' %}
{% assign hreflang_en = hreflang_en | replace: 'blogue-francais', 'blog-english' %}
{% endif %}

{% capture hreflang_fr %}{{ request.host  }}/fr{{ request.path }}{% endcapture %}
{% if template contains 'blog' and request.path contains 'blog-english' %}
{% assign hreflang_fr = hreflang_fr | replace: 'blog-english', 'blogue-francais' %}
{% endif %}
<link rel="alternate" hreflang="en" href="{{ hreflang_en }}" />
<link rel="alternate" hreflang="en-CA" href="{{ hreflang_en }}" />

<link rel="alternate" hreflang="fr" href="https://{{ hreflang_fr }}" />
<link rel="alternate" hreflang="fr-CA" href="https://{{ hreflang_fr }}" />

<script>
  function updateImageAltTag() {
    document.querySelectorAll('img[alt=""]').forEach(function(img) {
      img.alt = "{{ shop.name }}";
      //console.log(img);
    });    
  }
  document.addEventListener('DOMContentLoaded', function() {
    updateImageAltTag();
  });
  window.onload = function() {
    updateImageAltTag();
  }
</script>