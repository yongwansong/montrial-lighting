.section-product-slider {
  margin: 60px 0;
}

.pSlider--header {
  max-width: 250px;
  width: 100%;
  padding-top: 80px;
  margin: 0 0 32px 0;
}
.pSlider--header h2 {
  padding-right: 24px;
  font-size: 30px;
  line-height: 1.2;
}

.pSlider--slider-content {
  padding-left: 20px;
  max-width: calc(100% - 250px);
  width: 100%;
}
.carousel.pSlider--slider {
  display: flex;
  flex-wrap: nowrap;
  overflow: hidden;
}
.carousel.pSlider--slider .carousel-cell { width: calc(16.66% - 10px);flex: 1 0 auto;margin-left: 10px; margin-bottom: 27px; }
.pSlider--slider .product__thumbnail {
  margin: 0;  
  position: relative;
}

.carousel.pSlider--slider .carousel-cell .product__thumbnail {
  width: 100%;
}

.pSlider--slider.flickity-enabled {
  flex-direction: column;
}
.pSlider--slider .flickity-button {
  top: 30%;
}
.pSlider--slider .flickity-page-dots {
  position: static;
  margin-top: 10px;
  display: flex;
}
.pSlider--slider .flickity-page-dots .dot {
  height: 2px;
  width: auto;
  flex: 1 0 auto;
  margin: 0;
  border-radius: 0;
  transition: .5s all;
}

.pSlider--slider .has-secondary-image-swap .swap--visible:not(.secondary) { height: auto !important; }
.pSlider--slider .has-secondary-image-swap .image-element__wrap.secondary { position: absolute; top: 0; left: 0; width: 100%; height: 100% !important; }
.pSlider--slider .has-secondary-image-swap .image-element__wrap .secondary { height: 100% !important; }
.pSlider--slider .has-secondary-image-swap img.swap--visible { opacity: 1; visibility: visible; }
.pSlider--slider .has-secondary-image-swap img.secondary:not(.swap--visible) { opacity: 0; visibility: hidden; }
.pSlider--slider .thumbnail__caption .product-thumbnail__title ~ * { display: none !important; }

.section-product-slider .product-slider .container{flex-direction: column;}
.section-product-slider .product-slider .container .pSlider--header{max-width: 100%;text-align: center;padding-top: 0px;}
.section-product-slider .product-slider .container .pSlider--slider-content{padding-left: 0px;max-width: 100%;}


@media(max-width: 1199px){
  .product-slider .container { flex-direction: column; }
  .pSlider--header,
  .pSlider--slider-content { max-width: 100%; padding: 0; }

  .pSlider--slider.flickity-enabled { overflow: unset; }
  .pSlider--slider .flickity-prev-next-button.previous { left: -2.5%; }
  .pSlider--slider .flickity-prev-next-button.next { right: -2.5%; }
}
@media(max-width: 991px){
  .carousel.pSlider--slider .carousel-cell {
    width: 33.33%;
  }
}
@media(max-width: 767px){
  .section-product-slider { margin: 30px 0; }
  .carousel.pSlider--slider .carousel-cell { width: 39.1967%; }
  .pSlider--slider-content { margin: 0 -2.5%; width: unset; max-width: calc(100% + 5%); }
  .pSlider--slider .flickity-button,
  .pSlider--slider .flickity-page-dots { display: none; }
  .pSlider--slider .flickity-prev-next-button.previous { left: 0; }
  .pSlider--slider .flickity-prev-next-button.next { right: 0; }
  .carousel.pSlider--slider .carousel-cell { margin-bottom: 0; }
}