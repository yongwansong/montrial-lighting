#widget-fave-html {
  margin-top: 0;
  margin-bottom: -15px;
  width: 100%;
}

#widget-fave-html .ssw-fave-btn {
  width: 100%;
  line-height: 42px;
}

.ssw-link-fave-menu.action-area__link {
  flex-direction: row;
}

#widget-fave-html .ssw-fave-btn-content {
  width: 100%;
  font-size: 1rem;
  font-family: "DIN Next",sans-serif;
  color: #000;
  border-color: #d3d3d3;
  border-radius: 2px;
}

#widget-fave-html .ssw-fave-btn-counter,
#widget-fave-html .ssw-fave-btn-counter:before {
  color: #000;
  border-color: #d3d3d3;
  border-radius: 2px;
  transition: all .2s ease-in-out;
}

#widget-fave-html .ssw-fave-btn:hover .ssw-fave-btn-content,
#widget-fave-html .ssw-fave-btn:hover .ssw-fave-btn-counter {
  border-color: black;
  color: black;
}


#widget-fave-html .ssw-fave-btn:hover .ssw-fave-btn-content .ssw-icon-heart-o:before,
#widget-fave-html .ssw-fave-btn:hover .ssw-fave-btn-content .ssw-icon-heart:before {
  /*  color: #fff; */
}

#widget-fave-html .ssw-fave-btn:hover .ssw-fave-btn-counter:before {
  background-color: black;
  border-color: black;
}

.ssw-faveiticon {
  right: 0;
}

.ssw-page input,
.ssw-page textarea,
.ssw-page .btn,
.ssw-modal input[type="text"],
.ssw-modal input[type="email"],
.ssw-modal input[type="submit"],
.ssw-modal input[type="number"],
.ssw-modal input[type="password"] {
  padding: 8px 16px;
  border: 1px solid silver; 
  outline: none;
}

.header__link.action-area__link .ssw-link-fave-menu {
  padding: 5px;
}

.ssw-counter-fave-menu{
  color:#fff;
}

@media only screen and (min-width: 476px) {
  .ssw-fave-item__changelist.ssw-fave-item__changelist--page {
    display: flex;
    justify-content: space-around;
  } 
}

@media only screen and (max-width: 475px) and (min-width: 419px) {
  .ssw-fave-item__changelist.ssw-fave-item__changelist--page {
    height: 67px;
    display: flex;
    justify-content: space-between;
    flex-direction: column;
    align-items: center;
  } 
}

@media only screen and (max-width: 419px) {
  .ssw-fave-item__changelist.ssw-fave-item__changelist--page {
    height: 67px;
    display: flex;
    justify-content: space-evenly;
    flex-direction: row;
  } 
}

.ssw-fave-item__button-delete.button.btn.gw-btn-bg,
.ssw-fave-item__button-move.btn-move.button.btn.gw-btn-bg.gw-fsize-sm.gw-wishlist-btn { /* EDIT AND DELETE MOBILE */
  line-height: 0;
}

.ssw-fave-item {
  z-index: unset !important;
}

.customers-register .ssw-social-login-widget,
.customers-login .ssw-social-login-widget {
  text-align: start;
}

@media (max-width: 798px){
  #widget-fave-html {
    margin-bottom: 12px;
  }
}

.btn.button.ssw-fave-btn.ssw-wishlist-btn.ssw-hide-fave-count {
  border-color: lightgrey;
}

.ssw-fave-btn-content {
  color: #6c6c6e !important;
}



